MDScreen:
    name: "startpage"
    MDFloatLayout:
        md_bg_color: "#D7F6FD"
        Image:
            source: "./StartpageScreen/assets/bg.png"
            size_hint: 1, 1
            pos: 0, 0

    MDFillRoundFlatIconButton
        text: "    SIGN UP    "
        font_name: "./ChatScreen/assets/Kanit-Medium.ttf"
        font_size: 25
        theme_text_color: "Custom"
        text_color: "4C4C4C"
        pos: 100, 120
        md_bg_color: 133/255, 199/255, 242/255
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "signup"

    MDFillRoundFlatIconButton
        text: "    SIGN IN     "
        font_name: "./ChatScreen/assets/Kanit-Medium.ttf"
        font_size: 25
        theme_text_color: "Custom"
        text_color: "4C4C4C"
        pos: 100, 40
        md_bg_color: 133/255, 199/255, 242/255
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "signin"

    MDIconButton:
        icon: "./StartpageScreen/assets/exit.png"
        pos: 310, 490
        icon_size: 75
        on_release: app.exit()

