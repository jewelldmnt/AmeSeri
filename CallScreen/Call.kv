MDScreen:
    name: "call"
    button_speak: button_speak
    image_listening: image_listening
    image_speaking: image_speaking

    MDFloatLayout:
        md_bg_color: "#D7F6FD"
        Image:
            source: "./CallScreen/assets/bg.png"
            size_hint: 1.1, 1
            pos: -20, 110

        MDIconButton:
            icon: "./CallScreen/assets/button_end.png"
            pos: 95, 100
            icon_size: 80

        Button:
            id: button_speak
            disabled: False
            background_normal: "./CallScreen/assets/button_speak.png"
            background_down: "./CallScreen/assets/button_speakDown.png"
            background_disabled_normal: "./CallScreen/assets/button_dontSpeak.png"
            pos: 220, 118
            size_hint: 0.185, 0.1321428571
            on_press:
                app.say_something()
            on_release:
                app.responseCall()

        Image:
            id: image_listening
            source: "./CallScreen/assets/image_listening.png"
            size_hint: 0.725, 0.3
            pos: 55, 280
            opacity: 1

        Image:
            id: image_speaking
            source: "./CallScreen/assets/image_speaking.png"
            size_hint: 0.525, 0.15
            pos: 100, 210
            opacity: 0





