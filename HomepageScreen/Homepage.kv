MDScreen:
    name: "homepage"
    MDFloatLayout:
        md_bg_color: "#D7F6FD"
        Image:
            source: "./HomepageScreen/assets/bg.png"
            size_hint: 1, 1
            pos: 0, 0

    MDFillRoundFlatIconButton:
        text: "     LET'S CHAT!    "
        icon: "./HomepageScreen/assets/text.png"
        icon_size: 40
        font_name: "./ChatScreen/assets/Kanit-Medium.ttf"
        font_size: 25
        theme_text_color: "Custom"
        text_color: "4C4C4C"
        pos: 70, 120
        md_bg_color: 133/255, 199/255, 242/255
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "chat"

    MDFillRoundFlatIconButton:
        text: "     LET'S TALK!    "
        icon: "./HomepageScreen/assets/voice.png"
        icon_size: 40
        font_name: "./ChatScreen/assets/Kanit-Medium.ttf"
        font_size: 25
        theme_text_color: "Custom"
        text_color: "4C4C4C"
        pos: 70, 40
        md_bg_color: 133/255, 199/255, 242/255
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "call"

    MDIconButton:
        icon: "./HomepageScreen/assets/bot.png"
        pos: 20,200
        icon_size: 175
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "about"

    MDIconButton:
        icon: "./HomepageScreen/assets/exit.png"
        pos: 300, 475
        icon_size: 75
        on_release: app.exit()

    MDIconButton:
        icon: "./ChatScreen/assets/button_back.png"
        pos: 8, 494
        icon_size: 30
        on_release: app.back("startpage", "right")
