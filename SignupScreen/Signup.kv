MDScreen:
    name: "signup"
    first_name: first_name
    api_oai: api_oai
    email: email
    password: password
    confirm_password: confirm_password
    password_text: password_text

    MDFloatLayout:
        md_bg_color: "#D7F6FD"
        Image:
            source: "./SignupScreen/assets/bg.png"
            size_hint: 1, 1
            pos: 0, 0

        MDIconButton:
            icon: "./ChatScreen/assets/button_back.png"
            pos: 8, 500
            icon_size: 30
            on_release: app.sign_out("startpage", "right")

        MDFillRoundFlatIconButton:
            text: "SIGN UP  "
            font_name: "./SignupScreen/assets/Kanit-Medium.ttf"
            font_size: 15
            pos: 140, 30
            md_bg_color: "842828"
            on_release: app.checkInput()

        MDTextButton:
            text: "Sign in"
            font_name: "./SignupScreen/assets/Kanit-Medium.ttf"
            font_size: 10
            pos: 235, 8.8
            theme_text_color: "Custom"
            text_color: "842828"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signin"
        
        MDTextField:
            id: first_name
            font_name: "./SignupScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 366

        MDTextField:
            id: api_oai
            font_name: "./SignupScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 296

        MDTextField:
            id: email
            font_name: "./SignupScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 228

        MDTextField:
            id: password
            font_name: "./SignupScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 159
            password: True

        MDTextField:
            id: confirm_password
            font_name: "./SignupScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 90
            password: True

        MDCheckbox:
            size_hint: None, None
            size: 20, 20
            pos: 57, 77
            on_active: app.signup_show_password(*args)

        MDLabel:
            id: password_text
            text: "Show password"
            font_name: "./SigninScreen/assets/Kanit-Light.ttf"
            font_size: 10
            pos: 83, -193


        MDTextButton:
            text: "(Click here to get the API)"
            font_name: "./SignupScreen/assets/Kanit-Medium.ttf"
            font_size: 10
            pos: 80, 346.5
            theme_text_color: "Custom"
            text_color: "7B1D1D"
            on_release:
                import webbrowser
                webbrowser.open('https://platform.openai.com/account/api-keys')