MDScreen:
    name: "signup"
    first_name: first_name
    api_oai: api_oai
    email: email
    password: password
    confirm_password: confirm_password

    MDFloatLayout:
        md_bg_color: "#D7F6FD"
        Image:
            source: "./SignupScreen/assets/bg.png"
            size_hint: 1.1, 1
            pos: -20, 40

        MDIconButton:
            icon: "./ChatScreen/assets/button_back.png"
            pos: 8, 500
            icon_size: 30
            on_release: app.back("startpage", "right")

        MDFillRoundFlatIconButton:
            text: "SIGN UP  "
            font_name: "./SignupScreen/assets/Kanit-Medium.ttf"
            font_size: 15
            pos: 140, 75
            md_bg_color: "842828"
            on_release: app.checkInput()

        MDTextButton:
            text: "Sign in"
            font_name: "./SignupScreen/assets/Kanit-Medium.ttf"
            font_size: 10
            pos: 240, 51
            theme_text_color: "Custom"
            text_color: "842828"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signin"
        
        MDTextField:
            id: first_name
            font_name: "./SignupScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 396

        MDTextField:
            id: api_oai
            font_name: "./SignupScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 326

        MDTextField:
            id: email
            font_name: "./SignupScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 258

        MDTextField:
            id: password
            font_name: "./SignupScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 189

        MDTextField:
            id: confirm_password
            font_name: "./SignupScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 120

        MDTextButton:
            text: "(Click here to get the API)"
            font_name: "./SignupScreen/assets/Kanit-Medium.ttf"
            font_size: 10
            pos: 80, 373
            theme_text_color: "Custom"
            text_color: "7B1D1D"
            on_release:
                import webbrowser
                webbrowser.open('https://platform.openai.com/account/api-keys')