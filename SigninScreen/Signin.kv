MDScreen:
    name: "signin"
    email: email
    password: password
    MDFloatLayout:
        md_bg_color: "#D7F6FD"
        Image:
            source: "./SigninScreen/assets/bg.png"
            size_hint: 1.1, 1
            pos: -20, 40

        MDIconButton:
            icon: "./ChatScreen/assets/button_back.png"
            pos: 8, 500
            icon_size: 30
            on_release: app.sign_out("startpage", "right")

        MDFillRoundFlatIconButton:
            text: "SIGN IN  "
            font_name: "./SigninScreen/assets/Kanit-Medium.ttf"
            font_size: 15
            pos: 140, 114
            md_bg_color: "842828"
            on_release: app.sign_in()
        
        MDTextButton:
            text: "Sign up"
            font_name: "./SigninScreen/assets/Kanit-Medium.ttf"
            font_size: 10
            pos: 230, 73
            theme_text_color: "Custom"
            text_color: "842828"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "signup"

        MDTextField:
            id: email
            font_name: "./SigninScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 234

        MDTextField:
            id: password
            font_name: "./SigninScreen/assets/Kanit-Regular.ttf"
            size_hint: 0.7125, None
            pos: 57, 165